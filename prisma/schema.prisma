datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum EUserRole {
  SUPER_ADMIN
  ADMIN
  USER
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String
  profile_image String?
  password      String
  role          EUserRole @default(USER)

  is_active Boolean @default(true)

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  Blog       Blog[]
  Comment    Comment[]

  @@index([email, is_active])
  @@map("user")
}

model Blog {
  id       String @id @default(uuid())
  title    String
  detail   String
  category String

  created_by String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  User    User      @relation(fields: [created_by], references: [id])
  Comment Comment[]

  @@map("blog")
}

model Comment {
  id String @id @default(uuid())

  blog_id    String
  detail     String
  created_by String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Blog Blog @relation(fields: [blog_id], references: [id])
  User User @relation(fields: [created_by], references: [id])

  @@map("comment")
}
